<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hospital_patient_from" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
           <form string="patient">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="note"/>
                        <field name="image" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">

            <tree string="patient">

                <field name="name"/>
                <field name="age"/>
                <field name="note"/>
                <field name="image" widget="image"/>
            </tree>
        </field>

    </record>


    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first patient
            </p>
        </field>
    </record>

    <menuitem id="menu_hospital_root" name="Hospital" sequence="10"/>
    <menuitem id="menu_hospital_patient" name="Patients" parent="menu_hospital_root" action="action_hospital_patient" sequence="10"/>

</odoo>
